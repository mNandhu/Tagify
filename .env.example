# Tagify Docker Compose Environment Configuration
# Copy this file to .env and adjust values as needed

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# MinIO Configuration  
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password123

# MinIO Bucket Names
MINIO_BUCKET_THUMBS=tagify-thumbs
MINIO_BUCKET_ORIGINALS=tagify-originals

# Media Delivery Mode
# Options: redirect (default), url, off
MEDIA_PRESIGNED_MODE=redirect
MEDIA_PRESIGNED_EXPIRES=3600

# Thumbnail Configuration
THUMB_MAX_SIZE=512

# Scanner Configuration
# 0 = auto detect CPU cores
SCANNER_MAX_WORKERS=0

# AI Tagging (optional)
# Leave empty to disable AI tagging
AI_TAGGING_URL=