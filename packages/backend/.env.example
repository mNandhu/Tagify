MONGO_URI=mongodb://localhost:27017
AI_TAGGING_URL=http://localhost:9000/infer

# MinIO / S3-compatible storage
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=your_access_key
MINIO_SECRET_KEY=your_secret_key
MINIO_SECURE=false
MINIO_BUCKET_THUMBS=tagify-thumbs
MINIO_BUCKET_ORIGINALS=tagify-originals

# Scanner tuning
SCANNER_MAX_WORKERS=0
THUMB_MAX_SIZE=512  # Max pixels for longest edge of generated thumbnails

# Media delivery: off | redirect | url
# redirect (default) issues a 307 to a time-limited URL; url returns {"url": "..."} JSON; off streams via API
MEDIA_PRESIGNED_MODE=redirect
MEDIA_PRESIGNED_EXPIRES=3600
